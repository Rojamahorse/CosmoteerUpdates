ID = ion_storm
ToolTipKey = "Nebulas/IonStorm"
DefaultLogicalFeather = 150
DefaultVisualFeather = [400, 1400]
DefaultVisualFeatherOverZoom = [100, 4000]
DefaultVisualFeatherOverZoomExponent = 0.5
SharpCurveEdges = 8
DullCurveEdges = 4
DefaultAvoidDistance = 150
AIShouldAvoid = true
PathfindTravelCost = 100*100

ActiveEffects
[
	{
		Type = LightningStrikes
		LightningChancePerTilePerTick = 0.02%
		OriginDistanceFromShip = [50, 200]

		HitEffects
		[
			{
				Type = Damage
				Damage = 5000
			}
		]

		MediaEffects
		[
			&<particles/ion_storm_hit_lightning.rules>
			&<particles/ion_storm_lightning_flash.rules>
			&<particles/ion_storm_lightning_hit_flash.rules>

			: /BASE_SOUNDS/AudioExterior
			{
				RandomSounds = ["sounds/ion_lightning_strike_01.wav",
								"sounds/ion_lightning_strike_02.wav",
								"sounds/ion_lightning_strike_03.wav",
								"sounds/ion_lightning_strike_04.wav"]
				SpeedVariation = .2
				MaxConcurrent = 20
			}
		]
	}
]

HudTextKey = "Nebulas/IonStormHudFmt"
HudIcon
{
	Texture
	{
		File = "icon.png"
		MipLevels = 2
		SampleMode = Linear
	}
}

