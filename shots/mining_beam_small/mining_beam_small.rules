Range = 100
IdealRange = 90
Width = .1
HitInterval = .1
PenetratesStructure = false
FriendlyShipLowCollisions = false
CrewCollisions = {Enemies=true; Junk=true}
HitCrew = &HitOperational

BeamMediaEffects
[
	// The beam itself.
	{
		Type = Beam
		BeamSprite
		{
			Texture
			{
				File = "./Data/crew/salvage_beam.png"
				SampleMode = Linear
				MipLevels = 1
				UVMode = Clamp
			}
			_noiseTexture
			{
				File = ../../common_effects/particles/noise_marble.png
				SampleMode = Linear
				MipLevels = max
				UVMode = Wrap
			}
			Shader = "./Data/crew/salvage_beam.shader"
			_gradientPow = 0.35
			_sineFreq = 2.5
			_sineAmp = 0.03
			_noiseAmp = 0.12
			_gradientIntensity = 3
			_endCapSize = .125
			Size = [100%, .8]
			VertexColor = [255, 255, 255, 255]
			TargetBlendMode
			{
				SourceRgbFactor = SourceAlpha
				DestRgbFactor = One
				RgbOperator = Add
				SourceAlphaFactor = InverseDestAlpha
				DestAlphaFactor = One
				AlphaOperator = Add
			}
		}
		FadeInTime = .1
		FadeOutTime = .1
		RandomTimeOffset = [0, 1]
		Bucket = Upper1
	}

	// Beam lighting.
	{
		Type = Beam
		BeamSprite
		{
			Texture
			{
				File = "./Data/common_effects/particles/blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Shader = "./Data/common_effects/fancy_beam_light.shader"
			Size = [100%, 1.6]
			_extraBeginLength = (&Size/1) / 2
			_extraEndLength = (&Size/1) / 2
			VertexColor = [255, 127, 0, 255]
			_z = 0.1
			_litReflectiveStrength = 8
			_litAdditiveStrength = 0
			_unlitAdditiveStrength = 0.25
			_nrmlStrengthLimit = 0.2
			TargetBlendMode
			{
				SourceRgbFactor = InverseDestColor
				DestRgbFactor = One
				RgbOperator = Add
				SourceAlphaFactor = Zero
				DestAlphaFactor = One
				AlphaOperator = Add
			}
		}
		Bucket = Upper4
		IsLight = true
		FadeInTime = .5
		FadeOutTime = .1
	}

	: /BASE_SOUNDS/AudioExterior
	{
		Sound = "mining_beam.wav"
		Volume = 1
		Speed = 1
		MaxConcurrent = 1
		RampUpTime = .5
		RampDownTime = .5

		DynamicVolume : ^/0/DynamicVolume
		{
			UseCustomShapeForDistance = true
		}
		DynamicFilter : ^/0/DynamicFilter
		{
			UseCustomShapeForDistance = true
		}
	}

	: /BASE_SOUNDS/AudioExterior
	{
		Sound = "../ion_beam/ion_beam.wav"
		Volume = 0.75
		Speed = 2
		MaxConcurrent = 1
		MaxConcurrentVolume = 1
		RampUpTime = .25
		RampDownTime = .25
	}
]

HitShield = &HitOperational
