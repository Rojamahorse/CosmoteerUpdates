ID = "cosmoteer.disruptor_bolt"
OtherIDs = ["electro_bolt_shot", "electro_bolt", "cosmoteer.electro_bolt"]
Range = 180
IdealRange = [60, 180]
IdealRadius = [5, 50]
Speed = 180
ReceivableBuffs = [ElectronBuff]

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.01
		Density = 0.0001
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}

	Targetable
	{
		Type = Targetable
		Health = 30
		TargetCategory = "laser"
	}

	Hit
	{
		Type = PenetratingHit
		Penetration = 50 // Enough to get through one shield and lose half penetration.
		PenetratesOperational = false
		FactorEffectsWith = Targetable

		CrewCollisions = {Enemies=true; Junk=true}
		PenetratesCrew = true
		HitCrew = &HitOperational

		HitShield
		{
			ReduceEffectsByPenetration = true

			HitEffects
			[
				: ../../HitOperational/HitEffects/0
				{
					Amount = { BaseValue=900; BuffType=ElectronBuff; BuffMode=Multiply; }
					TreatShieldAsPart = true
				}
			]

			MediaEffects = &../HitOperational/MediaEffects
		}
		HitOperational
		{
			Offset = [-0.15, 0]
			ReduceEffectsByPenetration = true

			HitEffects
			[
				{
					Type = ResourceDrain
					ResourceType = battery
					Amount = { BaseValue=600; BuffType=ElectronBuff; BuffMode=Multiply; }

					MediaEffectsOnDrain
					[
						&<particles/ship_drain.rules>
						&<particles/disruptor_bolt_hit_center_bounce.rules>
						&<particles/disruptor_bolt_hit_center_bounce2.rules>
						&<particles/disruptor_bolt_hit_sizzle.rules>

						: /BASE_SOUNDS/AudioExterior
						{
							Sound = "discharge.wav"
							Volume = 1
							SpeedVariation = .2
						}
					]
				}
				{
					Type = Damage
					Damage = { BaseValue=100; BuffType=ElectronBuff; BuffMode=Multiply; }
				}
			]

			MediaEffects
			[
				&<particles/disruptor_bolt_hit_lightning.rules>
				&<particles/disruptor_bolt_hit_orb.rules>
				&<particles/disruptor_bolt_hit_bolts.rules>
				&<particles/disruptor_bolt_flash.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "disruptor_bolt_hit.wav"
					Volume = .4
					SpeedVariation = .4
				}
			]
		}
		HitStructural
		{
			ReduceEffectsByPenetration = true

			HitEffects
			[
				{
					Type = Damage
					Damage = { BaseValue=75; BuffType=ElectronBuff; BuffMode=Multiply; }
				}
			]

			MediaEffects
			[
				&<particles/disruptor_bolt_hit_struct_lightning.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "disruptor_bolt_hit.wav"
					Volume = .3
					SpeedVariation = .4
				}
			]
		}
		PenetratingOperational
		{
			// No effect.
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational = &PenetratingOperational
		FinishedPenetratingStructural = &PenetratingStructural
	}

	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Z = 0
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "./Data/common_effects/particles/blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [6, 6]
			VertexColor = [231, 255, 2]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 24
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.25
		}
	}

	MediaEffects
	{
		Type = MediaEffects
		FactorEffectsWith = Hit
		FactorEffectsExponent = 0.5
		MediaEffects
		[
			&<particles/disruptor_bolt_lightning.rules>
		]
	}
}